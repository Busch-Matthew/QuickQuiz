<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_sets_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Flashcard Sets"/>

    <Button
        android:id="@+id/add_card_set_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="45dp"
        android:onClick="show_edit_card_set_dialog"/>

    <ListView
        android:id="@+id/card_set_ListView"
        android:layout_below="@id/flashcard_sets_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:longClickable="true"/>

    <Switch
        android:id="@+id/sync_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp" />


</RelativeLayout>