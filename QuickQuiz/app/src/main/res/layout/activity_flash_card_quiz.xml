<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashCardQuiz"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/quiz_question_answer_title_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question/Aswer"
        android:textAlignment="center"
        android:textSize="18sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/question_answer_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flash Card Question/Answer"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/card_number_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/x"
        android:textSize="18sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/quiz_btn_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/quiz_btn_incorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#ffffff"/>

</RelativeLayout>